<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="StoneBlocksBase">
        <defName>BlocksReikiStone</defName>
        <label>灵石砖</label>
        <description>Blocks of solid sandstone. Sandstone is a relatively soft rock and chips easily.</description>
        <graphicData>
            <color>(204,255,255)</color>
        </graphicData>
        <statBases>
            <Mass>1</Mass>
            <SharpDamageMultiplier>0.5</SharpDamageMultiplier>
        </statBases>
    </ThingDef>

    <RecipeDef ParentName="MakeStoneBlocksBase">
        <defName>Make_StoneBlocksReikiStone</defName>
        <label>制作灵石砖</label>
        <description>将灵石切割成可用的砖块。</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ReikiStone</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ReikiStone</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <BlocksReikiStone>100</BlocksReikiStone>
        </products>
    </RecipeDef>

</Defs>
